<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jcorreaS5A.Views.vHome"
             Title="vHome">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        <Label 
            Text="SEMANA 5 SQLITE"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="txtNombre"
               Placeholder="Ingrese el nombre"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnInsertar"
                    Text="Insertar Dato"
                    Clicked="btnInsertar_Clicked"
                    Grid.Row="0"
                    Grid.Column="0"/>

            <Label x:Name="statusMessage"
                   FontSize="18"
                   TextColor="red"
                   Grid.Row="1"
                   Grid.Column="0"/>
            
            <Button x:Name="btnListar"
                    Text="Listar Personas"
                    Clicked="btnListar_Clicked"
                    Grid.Row="2"
                    Grid.Column="0"/>
            <CollectionView x:Name="listPersonas"
                            Grid.Row="3">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding Id}"
                                   Grid.Column="0"/>
                            <Label Text="{Binding Name}"
                                   Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Entry x:Name="txtId"
                   Placeholder="ID de la persona a actualizar/eliminar"
                   Grid.Row="4" 
                   Grid.Column="0"/>
            
            <Entry x:Name="txtNuevoNombre"
                   Placeholder="Nuevo nombre para actualizar"
                   Grid.Row="5" 
                   Grid.Column="0"/>
            
            <Button x:Name="btnActualizar"
                    Text="Actualizar Persona"
                    Clicked="btnActualizar_Clicked"
                    Margin="0,0,0,20"
                    Grid.Row="6" 
                    Grid.Column="0"/>

            <Button x:Name="btnEliminar"
                    Text="Eliminar Persona"
                    Clicked="btnEliminar_Clicked"
                    Grid.Row="7" 
                    Grid.Column="0"/>
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>